<div class="box">
  <h4>Reading <%= @book.title %></h4>
  <%= form_for [@user, @book, @reading] do |f| %>
    <%= f.number_field :startpage, placeholder: "Starting page", value: @book.last_page_read == 0 ? 0 : @book.last_page_read + 1 %>
    <%= f.datetime_select :starttime, {}, class: '' %>
    <%= submit_tag 'Start reading!' %>
  <% end %>
</div>