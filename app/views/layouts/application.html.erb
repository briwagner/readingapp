<!DOCTYPE html>
<html>
<head>
  <title>ReadingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render "layouts/header" %>

  <div class="container">

    <div class="flash centered">
      <% if flash[:notice] %>
        <% if flash[:notice].is_a?(Array) %>
          <% flash[:notice].each do |n| %>
            <h4><%= n %></h4>
          <% end %>
        <% else %>
          <h4><%= flash[:notice] %></h4>
        <% end %>
      <% end %>
    </div>

    <%= yield %>
  </div>

</body>
</html>
